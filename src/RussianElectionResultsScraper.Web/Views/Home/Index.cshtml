@{
    Layout = null;
}

@using System.Drawing
@using System.Globalization
@using MvcApplication2.Models
@model HomeModel
           
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>@Model.currentRegion.Name</title>
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.4.1/build/cssreset/cssreset-min.css">
    <script src="../../Scripts/jquery-1.5.1.js"></script>
    <script src="../../Scripts/jquery.scrollTo.js"></script>
    <style>
        body, td
            {
            font-family: helvetica,arial,freesans,clean,sans-serif;
            font-size: 13px;
            }
            
        #current
            {
            font-weight: bold;
            }
        
        #graphs
            {
            float: right;
            }
            
        td 
            {
            padding: 3px;
            }
            
        tr 
            {
            vertical-align: top;
            }
        .main td 
            {
            font-size: 16px;
            font-weight: bold;
            }
    </style>
</head>
<body>
    <div>
        @{ var breadcrumbs = @Model.Breadcrumbs;
           var candidates = @Model.Candidates; 
           }
        @foreach (var b in breadcrumbs)
        { 
            <a href="/@b.Id">@b.Name </a>
            if (b != breadcrumbs.Last())
            { 
                <span>-></span>
            }
        }
        <h1>@Model.currentRegion.Name</h1>
        <div id="graphs">
            <h3>Yabla</h3>
            <img src="graph/polling-station-results/@(Model.currentRegion.Id).jpg" /></img>
            <h3>Yabla</h3>
            <img src="graph/polling-stations-by-attendance/@(Model.currentRegion.Id).jpg"></img>
        </div>

        <div id="regions">
            <ul>
                <table>
                    <tr>
                        <th></th>
                        <th>Регион</th>
                        <th>Явка</th>
                        <th width="10%">Явка по УИК</th>
                        @foreach (var candidate in candidates)
                            {
                            <th >@candidate.ShortName<div style="height:10px;width:30px;background-color: @ColorTranslator.ToHtml(@candidate.Color)"></div></th>
                            }
                    </tr>
                    <tr class="main">
                        <td>
                            @Model.currentRegion.Id
                        </td>
                        <td>
                            @Model.currentRegion.Name
                        </td>
                        <td>
                            <span title="@Model.currentRegion.NumberOfVotersInVoterList">@Model.currentRegion.Attendance</span>
                        </td>
                        <td>
                            
                            @foreach (var cr in @Model.currentRegion.CandidateResults)
                                {
                                <td>
                                    <div>@string.Format("{0:N2}", @cr.Percents)%</div>
                                    <div>@string.Format("{0:N0}", @cr.Votes)</div>
                                </td>
                                }
                        </td>
                        <td>
                            <a target="_blank" href="@Model.currentRegion.CECUrl">ЦИК</a>
                        </td>

                    </tr>
                    @if (Model.ShowBreakdown)
                        {
                        foreach (var r in Model.regions)
                            {
                            var candidateResults = r.CandidateResults;
                            <tr>
                                <td>
                                    @r.Id
                                </td>
                                <td>
                                    <a href="/@r.Id">@r.Name</a>
                                </td>
                                <td>
                                    <span title="@r.NumberOfVotersInVoterList">@r.Attendance</span>
                                </td>
                                <td>
                                    <img style="border: 1px solid silver" src="/graph/polling-stations-by-attendance/@(r.Id).jpg?width=100&height=50" width="100" height="50"/>
                                </td>
                                @foreach (var cr in candidateResults)
                                    {
                                    <td>
                                        <div>@string.Format("{0:N2}", @cr.Percents)%</div>
                                        <div>@string.Format("{0:N0}", @cr.Votes)</div>
                                    </td>
                                    }
                                <td>
                                    <img style="border: 1px solid silver" src="/graph/polling-station-results/@(r.Id).jpg?width=100&height=50" width="100" height="50"/>
                                </td>
                            </tr>
                            }
                        }
                    @if (Model.ShowDetails)
                        {
                        <table>
                        @foreach (var counter in Model.currentRegion.Results )
                            {
                                <tr>
                                    <td>@counter.Counter</td>
                                    <td>@counter.Description</td>
                                    <td>@counter.Value</td>
                                </tr>
                                
                            }
                        </table>
                        }
                </table>
            </ul>
        </div>

    </div>
