@{
    ViewBag.Title = "Статистика федеральных выборов Российской Федерации";
}
@using System.Drawing
@using Microsoft.Web.Mvc
@using RussianElectionResultScraper.Web
@using MvcApplication2.Models


@model IndexModel
    <style>
        body, td
            {
            font-family: helvetica,arial,freesans,clean,sans-serif;
            font-size: 13px;
            }
            
        #current
            {
            font-weight: bold;
            }
        
        #graphs
            {
            float: right;
            }
            
        td 
            {
            padding: 3px;
            }
            
        tr 
            {
            vertical-align: top;
            }
            
        tr.alt td
            {
            background-color: #dbdada;
            }
        tr.over td
            {
            background-color: #fec072 !important;
            cursor: pointer;
            }
        .main td 
            {
            font-size: 16px;
            font-weight: bold;
            }
        .tooltip 
            {
            display:none;
            background:transparent url(/Content/themes/base/images/tooltip/black_arrow.png);
            font-size:12px;
            height:70px;
            width:160px;
            padding:25px;
            color:#fff;	
            }            
    </style>

    <div>
        <h1>Статистика федеральных выборов Российской Федерации</h1>
                
        <ul style="border-radius: 4px; box-shadow: rgba(0,0,0,0.3) 0 1px 3px; border-color: #E5E5E5 #DBDBDB #D2D2D2;width: 800px;margin: auto;border: 1px solid #EEE; padding: 20px;" >
        @foreach (var election in Model.Elections)
            {
            <li style="aborder: 1px solid #EEE; border-radius: 3px; border-bottom: 1px solid #EEE;padding:10px;margin-top: 3px;abackground: -webkit-gradient(linear,left top,left bottom,from(#FFF),color-stop(30%,#FFF), color-stop(80%,#FAFAFA),to(#EFEFEF))">
                <div style="float:left;width:400px;background-color: white">
                    <a style="font-size:16px;font-weight: bold" href="/election/@election.Id/place/@election.Root.Id">@election.Name</a>
                </div>
                <div style="float:left;margin-left:10px">
                    <img style="border:1px solid silver" src="/graph/polling-stations-by-attendance/@(election.Root.Id).jpg?height=80&width=100"/>
                </div>
                <div style="float:left;margin-left:10px">
                    <img style="border:1px solid silver" src="/graph/polling-station-results/@(election.Root.Id).jpg?height=80&width=100"/>
                </div>
                <div style="float:left;margin-left:10px">
                    <img style="border:1px solid silver" src="/graph/candidate-results-by-attendance/@(election.Root.Id).jpg?height=80&width=100"/>
                </div>
                <div style="clear: both"></div>
            </li>
            }

    </table>
        </ul>
    </div>
</div>

