@{
    Layout = null;
}

@using MvcApplication2.Models
@model HomeModel
           
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>@Model.currentRegion.Name</title>
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.4.1/build/cssreset/cssreset-min.css">
    <script src="../../Scripts/jquery-1.5.1.js"></script>
    <script src="../../Scripts/jquery.scrollTo.js"></script>
    <style>
        body, td
            {
            font-family: helvetica,arial,freesans,clean,sans-serif;
            font-size: 13px;
            }
            
        #current
            {
            font-weight: bold;
            }
        
        #graphs
            {
            float: right;
            }
            
        td 
            {
            padding: 3px;
            }
    </style>
</head>
<body>
    <div>
        @{ var breadcrumbs = @Model.Breadcrumbs; }
        @foreach (var b in breadcrumbs ) 
            { 
            <a href="/@b.Id">@b.Name </a>
                if (b != breadcrumbs.Last() )
                { 
                <span>-></span>
                }
            }
        <h1>@Model.currentRegion.Name</h1>
        <div id="graphs">
            <h3>Yabla</h3>
            <img src="graph/polling-stations-by-attendance/@(Model.currentRegion.Id).jpg"></img>
        </div>

        <div id="regions">
            <ul>
                <table>
                    <tr>
                        <td>
                            @Model.currentRegion.Id
                        </td>
                        <td>
                            @Model.currentRegion.Name
                        </td>
                        <td>
                            @Model.currentRegion.Attendance
                        </td>
                    </tr>
                    @foreach( var r in Model.regions )
                        {
                        <tr>
                            <td>
                                @r.Id
                            </td>
                            <td>
                                <a href="/@r.Id">@r.Name</a>
                            </td>
                            <td>
                                @r.Attendance
                            </td>
                            <td>
                                <img style="border: 1px solid silver" src="/graph/polling-stations-by-attendance/@(r.Id).jpg?width=100&height=50" width="100" height="50"/>
                            </td>
                        </tr>
                        }
                </table>
            </ul>
        </div>

    </div>
